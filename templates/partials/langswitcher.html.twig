{# 

Block with the language switch elements 
The langswitcher plugin is needed

#}

<div class="language-contianer language-change">
    {% set langobj = grav['language'] %}

    {% for key in langswitcher.languages %}

        {% if key == langswitcher.current %}
            {% set lang_url = page.url %}
            {% set active_class = ' selected' %}
        {% else %}
            {% set lang_url = base_url_simple ~ langobj.getLanguageURLPrefix(key)~langswitcher.page_route ?: '/' %}
            {% set active_class = '' %}
        {% endif %}

        <button onclick= "location.href = '{{ lang_url ~ uri.params }}';" class="btn btn-tool{{ active_class }}">
            {{ key|upper }}
        </button>
    {% endfor %}
</div>